{
  "name": "server",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "author": "Mateusz GÅ‚odek",
  "keywords": [],
  "license": "ISC",
  "scripts": {
    "s": "ts-node-dev src/index.ts -e js,ts,json,ejs",
    "start": "ts-node-dev src/index.ts -e js,ts,json,ejs",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md,json}' --config ./.prettierrc",
    "prepare": "husky install",
    "release": "release-it"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.2",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-error": "^0.0.6",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@release-it/conventional-changelog": "^8.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "husky": "^8.0.3",
    "prettier": "^2.8.1",
    "release-it": "^17.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "test",
              "section": "Test"
            },
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
